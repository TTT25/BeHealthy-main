      app:layout_constraintTop_toBottomOf="@+id/syp5" />

  <Spinner
      android:id="@+id/syp7"
      android:layout_width="339dp"
      android:layout_height="54dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/otptext"
